val currentDateTime = ZonedDateTime.now()

  // Define the formatter
  val formatter = DateTimeFormatter.ofPattern("yyyy-MM-dd'T'HH:mm:ss.SSSZ")

  // Format current datetime as string
  val currentDateTimeString = currentDateTime.format(formatter)

  // Calculate one day before and two days after
  val oneDayBefore = currentDateTime.minus(1, ChronoUnit.DAYS)
  val twoDaysAfter = currentDateTime.plus(2, ChronoUnit.DAYS)

  // Format the results back to string
  val oneDayBeforeString = oneDayBefore.format(formatter)
  val twoDaysAfterString = twoDaysAfter.format(formatter)
